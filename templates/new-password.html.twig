{% extends "base.html.twig" %}

{% block body %}
                {% if mes_erreurs is not empty %}
            <div class="alert alert-danger">
                {{ mes_erreurs|join('<br>')|raw }} 
            </div>
        {% elseif mes_validation is not empty %}    
            <div class="alert alert-success">
                {{ mes_validation|join('<br>')|raw 
            }} 
            </div> 
        {% endif %}
        <div class="container my-5">

            <h3 class="pb-2 text-center montserrat">Nouveau mot de passe</h3>

            <div class="row justify-content-center">

                <form class="bg-light border p-4 col-lg-4 col-md-6 col-10 montserrat" method="post">

                    <div class="form-group">
                        <input type="password" class="form-control" name="password" id="password" placeholder="Nouveau mot de passe">
                    </div>

                     <div class="form-group">
                        <input type="password" class="form-control" name="comfirm_password" id="comfirm_password" placeholder="Confirmez votre nouveau mot de passe">
                    </div>
                    
                <button type="submit" class="btn text-center grey-ookan">Env<scan class="gold-ookan">Oo</scan>yer</button>                    
                </form>
            </div>
        </div>
    {% endblock %}
