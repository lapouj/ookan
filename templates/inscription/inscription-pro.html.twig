{% extends "base.html.twig" %}

    {% block nav %}
        {% include "partials/nav.html.twig" %}
    {% endblock %}


    {% block body %}
        <div class="container my-5">

            <ul class="progressive-bar pb-5">
                <li class="active">Profil</li>
                <li class="active">Inscription</li>
                <li>Réussite</li>
            </ul>

            <div class="my-5">
                <h2 class="text-center montserrat">Inscription Professionnel</h2>
            </div>
            
            {% if mes_erreurs is not empty %}
            <div class="row justify-content-center">
                <div class="alert alert-danger text-center col-lg-4">
                    {{ mes_erreurs|join('<br>')|raw }} 
                </div>
            </div>
            {# {% elseif mes_validation is not empty %}
            <div class="row justify-content-center">    
                <div class="alert alert-success text-center">
                    {{ mes_validation|join('<br>')|raw 
                }} 
                </div>
            </div> #}
            {% endif %}

            <div class="row justify-content-center">

                <form method="POST" class="bg-light p-4 border">

                    <div class="form-group">
                        <input type="text" class="form-control" name="firstname" id="firstname" placeholder="Prénom">
                    </div>

                    <div class="form-group">
                        <input type="text" class="form-control" name="lastname" id="lastname" placeholder="Nom">
                    </div>

                    <div class="form-group">
                        <input type="text" class="form-control" name="pseudo" id="pseudo" placeholder="Pseudo">
                    </div>

                    <div class="form-group">
                        <input type="number" class="form-control" name="siren" id="siren" placeholder="N° SIREN">
                    </div>

                    <div class="form-group">
                        <input type="email" class="form-control" name="email" id="email" aria-describedby="emailHelp" placeholder="Email">
                    </div>

                    <div class="form-group">
                        <input type="password" class="form-control" name="password" id="password" placeholder="Mot de passe (8 caractères min.)">
                    </div>

                    <div class="form-group">
                        <input type="password" class="form-control" name="confirm-password" id="confirm-password" placeholder="Confirmer le mot de passe">
                        <small id="emailHelp" class="form-text text-muted">Nous ne partagerons jamais vos informations personnelles</small>
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn"><img src="/img/logo/inscription.png" width="140" height="40" class="d-inline-block align-top img-fluid" alt=""></button>
                    </div>

                </form>
            </div>
        
        <!-- Fin de div class container -->
        </div>
    {% endblock %}