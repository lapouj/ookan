{% extends "base.html.twig" %}

    {% block nav %}
        {% include "partials/nav.html.twig" %}
    {% endblock %}


    {% block body %}

        {% if mes_erreurs is not empty %}
            <div class="alert alert-danger">
                {{ mes_erreurs|join('<br>')|raw }} 
            </div>
        {% elseif mes_validation is not empty %}    
            <div class="alert alert-success">
                {{ mes_validation|join('<br>')|raw 
            }} 
            </div>
        {% endif %}
        
        <div class="container my-5">

            <ul class="progressive-bar">
                <li class="active">Profil</li>
                <li class="active">Inscription</li>
                <li>Réussite</li>
            </ul>

            <div class="my-5">
                <h2 class="text-center">Inscription Toulousain(e)</h2>
            </div>

            <div class="row justify-content-center">
                <form class="bg-light p-4 border" method="post">
                    <div class="form-group">
                        <input type="text" class="form-control" name="nom" id="nom" placeholder="Nom">
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" name="prenom" id="prenom" placeholder="Prénom">
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" name="pseudo" id="pseudo" placeholder="Pseudo">
                    </div>
                    <div class="form-group">
                        <input type="email" class="form-control" name="email" id="email" placeholder="Adresse Email">
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control" name="password" id="" placeholder="Mot de passe">
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control" name="comfirm_password" id="comfirm_password" placeholder="Confirmez votre mot de passe">
                    </div>
                    <div class="form-group">
                        <small id="emailHelp" class="form-text text-muted">Nous ne partagerons jamais vos informations personnelles</small>
                    </div>
                        <button type="submit" class="btn btn-primary">S'inscrire</button>
                       </div> 
                </form>
            </div>
        
        <!-- Fin de div class container -->
        </div>
    {% endblock %}