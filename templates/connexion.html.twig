{% extends "base.html.twig" %}

    {% block nav %}
        {% include "partials/nav.html.twig" %}
    {% endblock %}


    {% block body %}
        <div class="container my-5">
            <h3 class="pb-2 text-center montserrat">Connectez-vous</h3>
            <div class="row justify-content-center">
                <form class="bg-light border p-4 col-lg-4 col-md-6 col-10 montserrat" method="post">
                    <div class="form-group">
                        <input type="email" class="form-control" name="email" id="email" placeholder="Adresse Email">
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control" name="password" id="password" placeholder="Mot de passe">
                    </div>
                    <div class="form-group form-check">
                        <input type="checkbox" class="form-check-input" name="check-connexion" id="check-connexion">
                        <label class="w-100 form-check-label" for="exampleCheck1">Rester connecter ?</label>
                    </div>
                <button type="submit" class="btn text_center "><img src="/img/logo/connexion.png" width="180" height="60" class="d-inline-block align-top img-fluid" alt=""></button>                    
                </form>
            </div>
        </div>
    {% endblock %}
